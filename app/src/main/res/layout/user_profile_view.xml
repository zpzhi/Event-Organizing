<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeviceFragment" >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#F7F7F7"
        android:gravity="center">
        <ImageView
            android:id="@+id/userImg"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#EBEBEB"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/circle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitCenter"
                android:src="@drawable/section_header_circle"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布的活动"
                android:textColor="#17B1F8"
                android:id="@+id/hostEventsLabel"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hostEventsLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/moreHostEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="查看所有发布活动"
            android:textColor="#17B1F8"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="#EBEBEB"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@id/circle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitCenter"
                android:src="@drawable/section_header_circle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参加的活动"
                android:textColor="#17B1F8"
                android:layout_marginLeft="5dp"
                android:id="@+id/joinEventsLabel"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/joinEventsLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/moreJoinEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="查看所有参加活动"
            android:onClick="viewAllJoinEvents"
            android:textColor="#17B1F8"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#EBEBEB"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="20dp"
        android:background="#EBEBEB"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp">
            <ImageView
                android:id="@+id/friends_icon"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/section_header_friends"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注的好友"
                android:layout_marginTop="5dp"
                android:textColor="#17B1F8"
                android:layout_marginLeft="3dp"
                android:id="@+id/friendsListLabel"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friendListLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/moreFriendList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="查看所有好友"
            android:onClick="viewAllFriends"
            android:textColor="#17B1F8"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#EBEBEB"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp">
            <ImageView
                android:id="@+id/friends_icon1"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/section_header_friends"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已关注您的用户"
                android:layout_marginTop="5dp"
                android:textColor="#17B1F8"
                android:layout_marginLeft="3dp"
                android:id="@+id/friendsListLabel1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friendListLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/moreFriendList1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="查看所有关注您的用户"
            android:onClick="viewAllFriends1"
            android:textColor="#17B1F8"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"/>

    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="退出"
        android:textColor="#FFFFFF"
        android:id="@+id/logout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        />
</LinearLayout>

</ScrollView>
