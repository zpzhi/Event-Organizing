<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/abc_text_size_body_1_material"
    android:layout_marginRight="@dimen/abc_text_size_body_1_material"
    tools:context="com.example.pengzhizhou.meetup.PostActivityDetailActivity">

    <ProgressBar android:id="@+id/post_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postTitle"
            android:hint="请输入活动标题"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/timeLayout"
            android:layout_below="@+id/postTitle"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp" >
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择时间:"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/activityDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"
                android:textColor="#00B8F5"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00B8F5"
                android:text="Today"
                android:id="@+id/currentTime"
                android:textSize="18dp"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/durationLayout"
            android:gravity="center"
            android:layout_below="@+id/timeLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持续"
                android:textSize="18dp"
                android:id="@+id/textView4"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:inputType="number"
                android:text="8"
                android:id="@+id/actDuration"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="小时"
                android:textSize="18dp"
                android:id="@+id/textView6"/>
         </LinearLayout>

         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/durationLayout"
                android:id="@+id/locationLayout"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/locateImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/locate_32"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>

                <View
                    android:layout_width="1dp"
                    android:id="@+id/view2"
                    android:layout_height="fill_parent"
                    android:background="#000000"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationText"
                    android:hint="Please input your activity location"
                    android:layout_weight="6"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>

            </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactPhoneNumber"
            android:hint="联系电话 （必填）"
            android:inputType="phone"
            android:gravity="center"
            android:layout_below="@id/locationLayout"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/insertImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加图片 （选填）"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_below="@id/contactPhoneNumber"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/imgView"
            android:layout_below="@id/insertImage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTitle"
            android:layout_below="@id/insertImage"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:text="请填写活动描述"/>

        <View
        android:layout_width="fill_parent"
        android:id="@+id/gap"
        android:layout_below="@id/descriptionTitle"
        android:layout_height="0.5dp"
        android:background="#000000"/>

        <EditText
            android:id="@+id/activityDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:text="一起来参加这个超级好玩的活动"
            android:layout_below="@id/gap"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/post_content_border"/>

</RelativeLayout>
</ScrollView>
